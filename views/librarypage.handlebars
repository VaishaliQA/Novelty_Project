<!-- Begin library -->
<section class="library">

  <!-- Begin books you own -->
  <section class="books-you-own">
    <section class="library-title">
      <h1>Books You Own</h1>
    </section>
    <button class="button is-normal addBookButtonLibrary">ADD A BOOK</button>
    <div class="card">
      <header class="card-content">
        <div class="media-left">
          <figure class="image is-96x96">
            <img
              src="https://bulma.io/images/placeholders/96x96.png"
              alt="Placeholder image"
            />
          </figure>
        </div>
        <p class="card-header-title">Title</p>
      </header>
      <div class="card-content">
        <div class="content">
          <ul>
            <li>Author: First Last</li>
            <li>Genre: Genre</li>
          </ul>

          <!-- Begin dropdown -->
          <div class="dropdown read-status-dropdown">
            <div class="dropdown-trigger">
              <button
                class="button status-unread"
                aria-haspopup="true"
                aria-controls="dropdown-menu"
              >
                <span>You have not read this book.</span>
                <span class="icon is-small">
                  <i class="fas fa-angle-down" aria-hidden="true"></i>
                </span>
              </button>
            </div>
            <div class="dropdown-menu" id="dropdown-menu" role="menu">
              <div class="dropdown-content read-status-dropdown-content">
                <span class="dropdown-item status-are-reading">
                  You are reading this book.
                </span>
                <span class="dropdown-item status-have-read">
                  You have read this book.
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <footer class="card-footer">
        <a href="#" class="card-footer-item">Share</a>
      </footer>
      <footer class="card-footer">
        <a href="#" class="card-footer-item">Save</a>
        <a href="#" class="card-footer-item">Edit</a>
        <a href="#" class="card-footer-item">Delete</a>
      </footer>
    </div>
  </section>

  <!-- Begin spacer -->
  <section class="spacer spacer-one"></section>

  <!-- Begin books you borrow -->
  <section class="books-you-borrow">
    <section class="library-title">
      <h1>Books You Borrow</h1>
    </section>
    <div class="card">
      <header class="card-content">
        <div class="media-left">
          <figure class="image is-96x96">
            <img
              src="https://bulma.io/images/placeholders/96x96.png"
              alt="Placeholder image"
            />
          </figure>
        </div>
        <p class="card-header-title">Title</p>
      </header>
      <div class="card-content">
        <div class="content">
          <ul>
            <li>Author: First Last</li>
            <li>Genre: Genre</li>
            <li>Status: Unread | Reading | Read</li>
          </ul>
        </div>
      </div>
      <footer class="card-footer">
        <a href="#" class="card-footer-item">Save</a>
        <a href="#" class="card-footer-item">Edit</a>
        <a href="#" class="card-footer-item">Delete</a>
      </footer>
    </div>
  </section>

  <!-- Begin spacer -->
  <section class="spacer spacer-two"></section>

  <!-- Begin profile -->
  <section class="profile">
    <img
      class="profile-image"
      src="./assets/img/profileplaceholder.png"
      alt="Profile Placeholder"
    />
    <section class="profile-info">
      <h3>PROFILE</h3>
      <p>
        <em>First Last</em><br />
        <em>email@domain.com</em><br />
        <em>City, State</em><br />
      </p>
    </section>
  </section>

  <!-- Begin Add Book Modal -->
  <div class="modal add-book-modal">
    <div class="modal-background"></div>
    <div class="modal-content">
      <!-- Any other Bulma elements you want -->

      <!-- Begin Search Modal -->
      <section class="searchModal">

        <!-- Begin left -->
        <section class="searchLeft">
          <img
            class="logo"
            src="/assets/img/novelty-logo.png"
            alt="Novelty Logo"
          />
        </section>

        <!-- Begin right -->
        <section class="searchRight">

          <!-- Begin search form -->
          <section class="searchForm">

            <!-- Email field -->
            <section class="field isbn-field">
              <label class="label">ISBN</label>
              <p class="control has-icons-left has-icons-right">
                <input class="input" type="text" placeholder="ISBN" />
                <span class="icon is-small is-left">
                  <i class="fas fa-book"></i>
                </span>
                <span class="icon is-small is-right">
                  <i class="fas fa-check"></i>
                </span>
              </p>
            </section>

            <!-- Add button -->
            <button
              class="button is-normal searchBookButton"
            >Search Book</button><br>
            <button
              class="button is-normal addBookButton Disabled"
            >Add Book</button>

          </section>
        </section>
      </section>
    </div>
    <button class="modal-close is-large" aria-label="close"></button>
  </div>
</section>