<!-- Begin library -->
<section class="library">

  <!-- Begin books you own -->
  <section class="books-you-own">
    <section class="library-title">
      <h1>Books You Own</h1>
    </section>
    <button id="add-book-button-library" class="button is-normal add-book-button-library">ADD A BOOK</button>
    <section class="card">
      <header class="card-content">
        <section class="media-left">
          <figure class="image is-96x96">
            <img
              src="https://bulma.io/images/placeholders/96x96.png"
              alt="Placeholder image"
            />
          </figure>
        </section>
        <p class="card-header-title">Title</p>
      </header>
      <section class="card-content">
        <section class="content">
          <ul>
            <li>Author: First Last</li>
            <li>Genre: Genre</li>
          </ul>

          <!-- Begin dropdown -->
          <section class="dropdown read-status-dropdown">
            <section class="dropdown-trigger">
              <button
                class="button status-unread"
                aria-haspopup="true"
                aria-controls="dropdown-menu"
              >
                <span>You have not read this book.</span>
                <span class="icon is-small">
                  <i class="fas fa-angle-down" aria-hidden="true"></i>
                </span>
              </button>
            </section>
            <section class="dropdown-menu" id="dropdown-menu" role="menu">
              <section class="dropdown-content read-status-dropdown-content">
                <span class="dropdown-item status-are-reading">
                  You are reading this book.
                </span>
                <span class="dropdown-item status-have-read">
                  You have read this book.
                </span>
              </section>
            </section>
          </section>
        </section>
      </section>
      <footer class="card-footer">
        <a href="#" class="card-footer-item">Share</a>
      </footer>
      <footer class="card-footer">
        <a href="#" class="card-footer-item">Save</a>
        <a href="#" class="card-footer-item">Edit</a>
        <a href="#" class="card-footer-item">Delete</a>
      </footer>
    </section>
  </section>

  <!-- Begin spacer -->
  <section class="spacer spacer-one"></section>

  <!-- Begin books you borrow -->
  <section class="books-you-borrow">
    <section class="library-title">
      <h1>Books You Borrow</h1>
    </section>
    <section class="card">
      <header class="card-content">
        <section class="media-left">
          <figure class="image is-96x96">
            <img
              src="https://bulma.io/images/placeholders/96x96.png"
              alt="Placeholder image"
            />
          </figure>
        </section>
        <p class="card-header-title">Title</p>
      </header>
      <section class="card-content">
        <section class="content">
          <ul>
            <li>Author: First Last</li>
            <li>Genre: Genre</li>
            <li>Status: Unread | Reading | Read</li>
          </ul>
        </section>
      </section>
      <footer class="card-footer">
        <a href="#" class="card-footer-item">Save</a>
        <a href="#" class="card-footer-item">Edit</a>
        <a href="#" class="card-footer-item">Delete</a>
      </footer>
    </section>
  </section>

  <!-- Begin spacer -->
  <section class="spacer spacer-two"></section>

  <!-- Begin profile -->
  <section class="profile">
    <img
      class="profile-image"
      src="./assets/img/profileplaceholder.png"
      alt="Profile Placeholder"
    />
    <section class="profile-info">
      <h3>PROFILE</h3>
      <p>
        <em>First Last</em><br />
        <em>email@domain.com</em><br />
        <em>City, State</em><br />
      </p>
    </section>
  </section>

  <!-- Begin Add Book Modal -->
  <section id="add-book-modal" class="modal add-book-modal">
    <section class="modal-background"></section>
    <section class="modal-content">
      <!-- Any other Bulma elements you want -->

      <!-- Begin Search Modal -->
      <section class="searchModal">

        <!-- Begin left -->
        <section class="searchLeft">
          <img
            class="logo"
            src="/assets/img/novelty-logo.png"
            alt="Novelty Logo"
          />
        </section>

        <!-- Begin right -->
        <section class="searchRight">

          <!-- Add a Book -->
          <section class="modal-header add-book-modal-header">
            <h1>ADD A BOOK TO YOUR LIBRARY</h1>
          </section>

          <!-- Begin search form -->
          <section class="searchForm">

            <!-- ISBN field -->
            <section class="field isbn-field">
              <label class="label">ISBN</label>
              <p class="control has-icons-left has-icons-right">
                <input id="isbn-input" class="input isbn-input" type="text" placeholder="ISBN" />
                <span class="icon is-small is-left">
                  <i class="fas fa-book"></i>
                </span>
                <span class="icon is-small is-right">
                  <i class="fas fa-check"></i>
                </span>
              </p>
            </section>

            {{!-- Search button --}}
            <button id="search-book-button" class="button is-normal searchBookButton"
            >Search Book</button><br>

            {{!-- Display searched book info --}}
            <section id ="searched-book-info" class="searched-book-info">
              {{!-- Info shows dynamically after being seached --}}
            </section>
            <section id ="book-added-message" class="book-added-message">
              {{!-- Info shows dynamically after being added --}}
            </section>

            {{!-- Add button --}}
            <button id="add-book-button"
              class="button is-normal addBookButton Disabled">Add Book</button>
          </section>
        </section>
      </section>
    </section>
    <button id="add-modal-close" class="modal-close is-large add-modal-close" aria-label="close"></button>
  </section>
</section>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script type="module" src="/js/add-book.js"></script>
<script type="module" src="/js/script.js"></script>