{{! Partial header for library and browse }}
<nav class="nav">
  <img class="logo" src="/assets/img/novelty-logo.png" alt="Novelty Logo" />

  <!-- Search field -->
  <section class="search">
    <section class="search field">
      <label class="label search-label">Search</label>
      <p class="control has-icons-left has-icons-right">
        <input
          class="input search-input is-small"
          type="email"
          placeholder="Search"
        />
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </p>
    </section>
  </section>

  <section class="tabs">
    <section class="browseTab">
      <button class="button is-normal browseButton">Browse</button>
    </section>
    <section class="yourLibraryTab">
      <button class="button is-normal yourLibraryButton">Your Library</button>
    </section>
    <section class="logoutTab">
      <button class="button is-normal logOutButton" id="logout">Logout</button>
    </section>
  </section>
</nav>

